<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"                    
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms" 
             xmlns:mvxBind="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:other="clr-namespace:TrackYourTrip.Core.ViewModels.Other" 
             xmlns:custom="clr-namespace:TrackYourTrip.Core.CustomControls"
             xmlns:customBehavior="clr-namespace:TrackYourTrip.Core.CustomBehavior"
             xmlns:converter="clr-namespace:TrackYourTrip.Core.Converters"                    
             mc:Ignorable="d"
             x:Class="TrackYourTrip.Core.Pages.Settings.FishingAreaPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding DeleteCancelCommandTitle}" Order="Primary" Command="{mvxBind:MvxBind DeleteCancelCommand}"  />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <StyleSheet Source="/Styles/TrackYourTrip.css" />
        <converter:IsValidToIsVisibleConverter x:Key="cnvIsValidToIsVisibleConverter"></converter:IsValidToIsVisibleConverter>

        <ResourceDictionary>
            <other:MapItemTemplateSelector x:Key="MapItemTemplateSelector">
                <other:MapItemTemplateSelector.DataTemplate>
                    <DataTemplate>
                        <maps:Pin Position="{Binding Position}"
                                 Label="{Binding Label}" />
                    </DataTemplate>
                </other:MapItemTemplateSelector.DataTemplate>
            </other:MapItemTemplateSelector>
        </ResourceDictionary>

    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout StyleClass="defaultStackLayout">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Bezeichnung: " Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center" />

                <custom:CustomEntry x:Name="FishingAreaName"
                                    BorderErrorColor="Red"
                                    Text="{Binding FishingArea.FishingArea}"
                                    Grid.Row="0"
                                    Grid.Column="1">
                    <custom:CustomEntry.Behaviors>
                        <customBehavior:EmptyEntryValidatorBehavior />
                    </custom:CustomEntry.Behaviors>
                </custom:CustomEntry>

                <Label Text="Gewässertyp: " Grid.Row="1" Grid.Column="0" VerticalTextAlignment="Center" />


                <custom:CustomPicker 
                    ItemsSource="{Binding Waters}"
                    SelectedValuePath="Id"                    
                    DisplayMemberPath="Water" 
                    SelectedValue="{Binding FishingArea.ID_WaterModel, Mode=TwoWay}"
                    Grid.Row="1" Grid.Column="1" />
            </Grid>

            <Label>Markieren sie bitte das Zentrum ihres Gewässers:</Label>
            <maps:Map x:Name="map"
                      InitialCameraUpdate="{Binding MapCenter, Mode=TwoWay}"
                      ItemsSource="{Binding Pins, Mode=TwoWay}"
                      ItemTemplateSelector="{StaticResource MapItemTemplateSelector}"
                      MapType="Hybrid"
                      VerticalOptions="FillAndExpand">
                <maps:Map.Behaviors>
                    <b:EventToCommandBehavior 
                                      EventName="MapClicked"
                                      EventArgsParameterPath="Point"
                                      Command="{Binding MapClickedCommand}" />
                </maps:Map.Behaviors>
            </maps:Map>


            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" >

                <Button Text="{Binding SpotTitle}"
                                Command="{Binding SpotsClickedCommand}"
                                HorizontalOptions="CenterAndExpand"></Button>
                <Label 
                   Text="{Binding Errors}" 
                   IsVisible="{Binding IsValid, Converter={StaticResource cnvIsValidToIsVisibleConverter}}"
                   StyleClass="defaultErrorLabel"
                   HorizontalOptions="CenterAndExpand"/>

                <Button Text="Speichern" 
                    HorizontalOptions="CenterAndExpand" 
                    Command="{mvxBind:MvxBind SaveCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</mvx:MvxContentPage>